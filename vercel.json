{
  "builds": [
    {
      "src": "package.json",  <-- CHANGE THIS LINE: Point to the root package.json
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client",
        "buildCommand": "npm run build:client"  <-- ADD THIS LINE: Explicitly tell Vercel the build command
      }
    },
    {
      "src": "functions/api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["functions/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/functions/api/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/client/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|json|webmanifest))",
      "dest": "/dist/client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/client/index.html"
    }
  ]
}
